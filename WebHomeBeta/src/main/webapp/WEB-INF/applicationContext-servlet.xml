	<bean id="uploadArquivosAssembleiaControllerBean"
		class="br.com.webhomebeta.bean.UploadArquivosAssembleiaControllerBean"></bean>
	<bean id="enquetesService" class="br.com.webhomebeta.service.EnquetesService"></bean>
